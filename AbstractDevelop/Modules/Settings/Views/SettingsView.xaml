<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="clr-namespace:AbstractDevelop.Modules.Settings.ViewModels"
    x:Class="AbstractDevelop.Modules.Settings.Views.SettingsView" mc:Ignorable="d" d:DesignHeight="300"
    d:DesignWidth="300" d:DataContext="{d:DesignInstance dd:SettingsViewModel}">
    <StackPanel Orientation="Horizontal">
        <Label Name="LanguageTitle"/>
        <ComboBox SelectedValue="{Binding Language}" ItemsSource="{Binding LanguageList}" IsEditable="False"/>
    </StackPanel>
</UserControl>