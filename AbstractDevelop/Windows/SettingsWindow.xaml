<Window x:Class="AbstractDevelop.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lang="http://gu.se/Localization"
        xmlns:p="clr-namespace:AbstractDevelop.Properties"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight" Loaded="Window_Loaded" WindowStyle="ToolWindow">
    <Grid VerticalAlignment="Top" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Label Content="{lang:Static p:Resources.Language}"/>
        <ComboBox x:Name="languageCombo" Grid.Column="1" SelectedIndex="0">
            <ComboBoxItem Content="{lang:Static p:Resources.RussianLang}"/>
            <ComboBoxItem Content="{lang:Static p:Resources.EnglishLang}"/>
        </ComboBox>

        <Button Content="{lang:Static p:Resources.Apply}" Grid.Row="1" IsDefault="True" Margin="5" Click="ApplyCommandExecuted"/>
        <Button Content="{lang:Static p:Resources.Cancel}" Grid.Row="1" Grid.Column="1" IsCancel="True" Margin="5" Click="Button_Click" />

    </Grid>
</Window>
