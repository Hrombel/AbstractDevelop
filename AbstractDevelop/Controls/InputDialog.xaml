<Window x:Class="AbstractDevelop.Controls.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AbstractDevelop"
        mc:Ignorable="d"
        Title="Запрос ввода" SizeToContent="WidthAndHeight" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:CustomCommands.SaveValue}" Executed="SaveValueExecuted"/>
    </Window.CommandBindings>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Введите значение:"/>
        <TextBox x:Name="input" Grid.Row="1" Margin="5, 2"/>
        <Button Content="OK" IsDefault="true" Grid.Row="2" Margin="10, 5" Command="{x:Static local:CustomCommands.SaveValue}"/>
    </Grid>
</Window>
