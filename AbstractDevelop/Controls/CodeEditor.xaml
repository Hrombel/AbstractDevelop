<UserControl x:Class="AbstractDevelop.CodeEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AbstractDevelop"
             xmlns:sci="clr-namespace:ScintillaNET;assembly=ScintillaNET"
             
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <WindowsFormsHost>
            <sci:Scintilla x:Name="editorComponent" BorderStyle="FixedSingle" AnnotationVisible="Standard" AllowDrop="True" VScrollBar="True" HScrollBar="False"/>
        </WindowsFormsHost>
    </Grid>
</UserControl>
